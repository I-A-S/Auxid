{
  "name": "auxid-vscode",
  "displayName": "auxid-vscode",
  "description": "Auxid Extension for VSCode",
  "version": "0.1.0",
  "repository": "https://github.com/I-A-S/Auxid",
  "icon": "logo.png",
  "publisher": "I-A-S",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auxid.toggle",
        "title": "Auxid: Toggle Validator",
        "category": "Auxid"
      }
    ],
    "keybindings": [
      {
        "command": "auxid.toggle",
        "key": "ctrl+q",
        "mac": "cmd+q",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "auxid-sidebar-view",
          "title": "Auxid",
          "icon": "logo.png"
        }
      ]
    },
    "views": {
      "auxid-sidebar-view": [
        {
          "type": "webview",
          "id": "auxid.sidebar",
          "name": "Auxid Controls",
          "icon": "logo.png"
        }
      ]
    },
    "configuration": {
      "title": "Auxid",
      "properties": {
        "auxid.validatorPath": {
          "type": "string",
          "default": "auxid-validator",
          "description": "Path to the compiled auxid-validator executable."
        },
        "auxid.buildPath": {
          "type": "string",
          "default": "${workspaceFolder}",
          "description": "Path to the folder containing compile_commands.json."
        }
      }
    }
  },
  "activationEvents": [
    "onLanguage:cpp",
    "onLanguage:c"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
